{
  "name": "weather-agent",
  "version": "1.0.0",
  "description": "Intelligent weather notification system with AI agent orchestration, automated scheduling via BullMQ, and Redis-backed job queues.",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": "10.26.2"
  },
  "scripts": {
    "dev:up": "docker-compose -f docker-compose.dev.yaml up -d --build --remove-orphans",
    "dev:down": "docker-compose -f docker-compose.dev.yaml down",
    "dev:nuke": "docker-compose -f docker-compose.dev.yaml down -v --remove-orphans",
    "dev:rebuild": "docker-compose -f docker-compose.dev.yaml build --no-cache && docker-compose -f docker-compose.dev.yaml up -d --remove-orphans",
    "dev:restart": "docker-compose -f docker-compose.dev.yaml restart",
    "prod:up": "docker-compose -f docker-compose.prod.yaml up -d --build --remove-orphans",
    "prod:down": "docker-compose -f docker-compose.prod.yaml down",
    "prod:nuke": "docker-compose -f docker-compose.prod.yaml down -v --remove-orphans",
    "prod:rebuild": "docker-compose -f docker-compose.prod.yaml build --no-cache && docker-compose -f docker-compose.prod.yaml up -d --remove-orphans",
    "prod:restart": "docker-compose -f docker-compose.prod.yaml restart",
    "mobile:dev": "pnpm --filter mobile start",
    "mobile:ios": "pnpm --filter mobile ios",
    "mobile:android": "pnpm --filter mobile android"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mayankgupta1008/weather-agent.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mayankgupta1008/weather-agent/issues"
  },
  "homepage": "https://github.com/mayankgupta1008/weather-agent#readme"
}
